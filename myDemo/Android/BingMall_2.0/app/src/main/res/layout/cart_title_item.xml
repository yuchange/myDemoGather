<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/cart_titleitem_linear_h"
    android:layout_marginLeft="@dimen/cart_titleitem_linear_marginleft"
    android:background="@color/cartTitle_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cart_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_title_textbg"
        android:gravity="center"
        android:paddingBottom="@dimen/cart_titleitem_tv_padtopbottom"
        android:paddingLeft="@dimen/cart_titleitem_tv_padleftright"
        android:paddingRight="@dimen/cart_titleitem_tv_padleftright"
        android:paddingTop="@dimen/cart_titleitem_tv_padtopbottom"
        android:textColor="@drawable/cart_title_text"
        android:textSize="@dimen/cart_titleitem_tv_textsize"
        android:textStyle="bold" />

</LinearLayout>