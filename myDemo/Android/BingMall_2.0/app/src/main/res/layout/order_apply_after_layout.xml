<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/order_detail">
    <TextView
        android:id="@+id/order_detail_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_detail_title"
        android:text="@string/order_apply"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingBottom="@dimen/order_listItem_marginBottom"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/back_money_and_goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/order_after_sale_money"/>
    <ListView
        android:id="@+id/applay_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_buttom"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >

        <LinearLayout
            android:id="@+id/after_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/text_money_title_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审核状态（可修改申请）"
                android:textColor="@color/order_applay_answer"
                android:textSize="17dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_money_title_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额："
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/text_money_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_toRightOf="@id/text_money_title_after"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/order_applay_limit_money"
                    />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/befor_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/text_money_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_toRightOf="@id/text_money_title"
                android:layout_marginLeft="5dp"
                android:textColor="@color/order_applay_limit_money"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/order_applay_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_applay_edit"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/order_applay_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_applay_confirm"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/order_applay_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_applay_cancel"
            android:layout_toLeftOf="@id/order_applay_confirm"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>