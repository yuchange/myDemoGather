<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="12dp">
            <TextView
                android:id="@+id/logistics_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:gravity="center_vertical"
                android:textColor="@color/goodsDetailName"/>
            <TextView
                android:id="@+id/logistics_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/goodsDetailPrice"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logistics_top_text"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/goodsDetailPrice"
                android:layout_marginLeft="11dp"/>
            <TextView
                android:id="@+id/logistics_last_text"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_below="@id/logistics_top_text"
                android:background="@color/goodsDetailPrice"
                android:layout_marginLeft="11dp"/>
            <ImageView
                android:id="@+id/logistics_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delivery"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/logistics_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="17dp"
            android:textColor="@color/goodsDetailPrice"
            />

    </LinearLayout>

</LinearLayout>