<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/order_text"
        android:layout_width="530dp"
        android:layout_height="1dp"
        android:background="@color/goodsDetailPrice"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/order_detail_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginRight="@dimen/ads_space_bottom_v"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/cycle_lefttrv_top">
            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_time"
                android:textSize="@dimen/ads_space_bottom_v"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cart_griditem_freighttv_margintop">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_name"
                    android:text="@string/order_detail_weight"/>
                <TextView
                    android:id="@+id/order_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ads_space_bottom_v"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_name"
                    android:text="@string/order_detail_list_limitmoney"/>
                <TextView
                    android:id="@+id/order_limitmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ads_space_bottom_v"
                    android:textColor="@color/order_read"/>
                <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/ads_space_bottom_v">-->
                <!--<TextView-->
                <!--android:id="@+id/order_money"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/order_name"-->
                <!--android:layout_centerInParent="true"/>-->
                <!--<TextView-->
                <!--android:layout_width="@dimen/cart_fragment_addcart_marginleft"-->
                <!--android:layout_height="@dimen/order_info_item_text_h"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:background="@color/order_name"/>-->
                <!--</RelativeLayout>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>