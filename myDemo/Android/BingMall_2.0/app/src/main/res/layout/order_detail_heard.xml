<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/order_detail_hear"
    android:paddingTop="@dimen/ads_space_bottom_v"
    android:paddingRight="@dimen/ads_space_bottom_v"
    android:paddingLeft="@dimen/ads_space_bottom_v"
    android:paddingBottom="40dp">
    <!--<TextView-->
        <!--android:id="@+id/order_detail_flug"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="right"-->
        <!--android:textSize="@dimen/order_info_head_text"-->
        <!--android:textColor="@color/CartFreight"-->
        <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/cycle_lefttrv_top">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_number"
                android:textColor="@color/order_title"
                android:textSize="@dimen/order_info_head_text"/>
            <TextView
                android:id="@+id/order_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_read"
                android:textSize="@dimen/order_info_head_text"/>
        </LinearLayout>
        <TextView
            android:id="@+id/order_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/order_time"
            android:textSize="@dimen/order_info_head_text"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orderdetailname"
            android:layout_marginRight="@dimen/ads_space_bottom_v"/>
        <TextView
            android:id="@+id/order_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/order_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orderdetailphone"
            android:layout_marginRight="@dimen/ads_space_bottom_v"/>
        <TextView
            android:id="@+id/order_detail_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/order_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/ads_space_bottom_v">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orderdetailplace"
            android:layout_marginRight="@dimen/ads_space_bottom_v"/>
        <TextView
            android:id="@+id/order_detail_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_name"/>
    </LinearLayout>

</LinearLayout>