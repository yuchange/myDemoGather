<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/goods_product_item_linear"
              android:layout_width="@dimen/goodslist_linear_w2"
              android:layout_height="300dp"
              android:layout_marginLeft="@dimen/goodslist_linear_marginleft2"
              android:layout_marginTop="@dimen/goodslist_linear_margintop"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/goods_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/goods_item_imgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/reduce_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/goodslist_productname_textsize"/>
    </LinearLayout>


    <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="副标题"
          android:textSize="10sp"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/CartFreight"
            android:textSize="@dimen/pay_haier_hint_size"/>

        <TextView
            android:id="@+id/goods_item_price_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/goodslist_price_marginLeft"
            android:layout_marginTop="@dimen/goodslist_price_margintop"
            android:textColor="@color/goodsDetailPrice"
            android:textSize="@dimen/goodslist_price_textsize"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/goodslist_price_margintop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_item_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/goodslist_price_margintop"
            android:background="@drawable/goods_list_cart2"
            />


        <ImageView
            android:id="@+id/goods_item_one_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/goods_list_onekey"
            />
        <!-- <Button
             android:id="@+id/goods_item_one_key"
             android:layout_width="130dp"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/goodslist_price_margintop"
             android:layout_marginLeft="15dp"
             android:background="@drawable/goodslist_onekey_bg"
             android:gravity="center"
             android:text="@string/goodslist_products_item_oneKey"
             android:textColor="@android:color/white"
             android:textSize="@dimen/goodslist_addcart_textsize"
             android:textStyle="bold"/>-->

        <!--<ImageView
            android:id="@+id/goods_item_add_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/cart_griditem_freighttv_margintop"
            android:src="@drawable/cart_one_keyd"/>

        <ImageView
            android:id="@+id/goods_item_one_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/cart_griditem_iv_marginleft"
            android:src="@drawable/cart_join_cart"/>-->

    </LinearLayout>
</LinearLayout>