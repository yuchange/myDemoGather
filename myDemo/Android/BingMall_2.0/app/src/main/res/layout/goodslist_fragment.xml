<?xml version="1.0" encoding="utf-8"?>
<com.bingstar.bingmall.video.lib.SynLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goodlist_syn_linear_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <com.bingstar.bingmall.home.HomeTitleView
            android:id="@+id/home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ads_padding"
            android:layout_marginRight="@dimen/ads_padding"
            >

        </com.bingstar.bingmall.home.HomeTitleView>

        <com.bingstar.bingmall.video.lib.SynLinearLayout
            android:id="@+id/goodlist_syn_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/order_infofragment_numtvmargintop"
            android:layout_marginRight="@dimen/order_infofragment_numtvmargintop">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/goodslist_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"/>

        </com.bingstar.bingmall.video.lib.SynLinearLayout>

    </LinearLayout>
</com.bingstar.bingmall.video.lib.SynLinearLayout>