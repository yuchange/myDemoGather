<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cycle_leftrv_width1"
    android:layout_height="@dimen/cycle_leftrv_height"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/cycle_item"
    android:gravity="center">

    <com.bingstar.bingmall.cycle.view.CycleImageView
        android:id="@+id/cycle_item_img"
        android:layout_width="@dimen/cycle_leftrv_leftivwidth"
        android:layout_height="@dimen/cycle_leftrv_leftivheight"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ads_space_bottom_v"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cycle_leftrv_leftlinearmarginleft"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cycle_item_productName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/cycle_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cycle_item_price"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/cycle_lefttrv_top"
                android:textColor="@color/CartFreight" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cycle_lefttrv_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cycle_item_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cycle_weight" />
                <TextView
                    android:id="@+id/cycle_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cycle_button"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/cycle_leftrv_rightlinearwidth"
        android:layout_height="match_parent"
        android:layout_marginLeft="42dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/cycle_count"
            android:textColor="@color/cycle_name" />

        <TextView
            android:id="@+id/cycle_item_count"
            android:layout_width="28dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/cycle_lefttrv_top"
            android:gravity="center"
            android:textColor="@color/cycle_button" />


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/cycle_leftrv_rightivwidth"
        android:layout_height="@dimen/cycle_leftrv_rightivheight"
        android:layout_marginLeft="@dimen/cycle_leftrv_rightivmarginleft"
        android:gravity="center"
        android:src="@drawable/add_cycle" />
</LinearLayout>
