<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_title_h">
    <ImageView
        android:id="@+id/home_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/home_binggo_logo"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_title_nav"
        android:layout_width="@dimen/order_image_w"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/home_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/home_title_search_space"
        android:src="@drawable/icon_search"/>
</LinearLayout>