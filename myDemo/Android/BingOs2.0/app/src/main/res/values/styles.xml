<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="manager_txt">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#919191</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabLayoutTextAppearances" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="manager_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@mipmap/manager_btn_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="red_text_num">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:background">@mipmap/reddot</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="order_red_text_num">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:background">@mipmap/reddot</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="coupon_red_text_num">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:background">@mipmap/reddot</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- 自定义Dialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@color/base_transparent</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--自定义ProgressDialog-->
    <style name="MyProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="order_apply_btn">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/order_apply_btn_unselect</item>
    </style>

</resources>
