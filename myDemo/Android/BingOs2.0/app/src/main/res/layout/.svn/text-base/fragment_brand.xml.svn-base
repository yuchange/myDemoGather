<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/brand_tab"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="#37CBD8"
        app:tabIndicatorHeight="4px"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#37CBD8"
        app:tabTextAppearance="@style/TabLayoutTextAppearances"
        app:tabTextColor="#696969" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/c_F4F4F4"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/brand_vp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
</LinearLayout>