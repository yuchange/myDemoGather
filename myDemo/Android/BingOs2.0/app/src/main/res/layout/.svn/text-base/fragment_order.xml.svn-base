<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/order_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tabGravity="center"
        app:tabIndicatorColor="#ff7300"
        app:tabIndicatorHeight="4px"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/TabLayoutTextAppearances"
        app:tabTextColor="#696969" />
   <com.zyf.bings.bingos.ui.statelayout.ProgressFrameLayout
       android:id="@+id/order_progress"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:layout_height="0dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/order_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
   </com.zyf.bings.bingos.ui.statelayout.ProgressFrameLayout>
</LinearLayout>