<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_order_confirm_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swisseman春风十里不如你40集"
            android:textColor="@color/tv_goods_detail_black"
            android:textSize="@dimen/tv_goods_detail_mid"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="start|center_vertical"
                android:text="规格: "
                android:textColor="@color/tv_goods_detail_gray"
                android:textSize="@dimen/common_tv_size"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_order_confirm_spec"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="start|center_vertical"
                android:text="数量: "
                android:textColor="@color/tv_goods_detail_gray"
                android:textSize="@dimen/common_tv_size"/>

            <ImageButton
                android:id="@+id/iv_item_order_confirm_decre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/goods_detail_decre"/>

            <TextView
                android:id="@+id/tv_order_confirm_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="@dimen/common_tv_size"/>

            <ImageButton
                android:id="@+id/iv_item_order_confirm_incre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/goods_detail_incre"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
