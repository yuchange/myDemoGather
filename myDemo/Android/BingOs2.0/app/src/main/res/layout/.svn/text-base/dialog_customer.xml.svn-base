<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@mipmap/customer_service_bg"
              android:layout_height="match_parent"
              >


    <ImageView
        android:id="@+id/iv_customer_service"
        android:layout_width="280dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="31dp"
        android:layout_height="280dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_919191"
        android:text="扫码联系客服"
        android:layout_below="@id/iv_customer_service"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textSize="17sp"/>
    <ImageView
        android:id="@+id/iv_customer_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:layout_marginTop="26dp"
        android:src="@mipmap/address_addfragment_close"/>
</RelativeLayout>