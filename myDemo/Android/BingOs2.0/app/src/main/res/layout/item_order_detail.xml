<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="211dp">

    <ImageView
        android:id="@+id/iv_item_order_product_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="41dp"

        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@id/iv_item_order_product_img">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_is_seven_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(七天无理由类型)"
                android:textColor="@color/tv_common_red"
                android:textSize="17sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_item_order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="西班牙原装进口莫斯卡"
                android:textColor="@color/c_919191"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_item_order_product_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_order_product_name"
                android:layout_below="@id/item_order_product_name"
                android:layout_marginTop="15dp"
                android:text="规格:"
                android:textColor="@color/c_c8c8c8"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_upload_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/delete_order"
                android:gravity="center"
                android:text="@string/upload_logistics"
                android:textColor="@color/c_919191"
                android:textSize="17sp"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_order_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_goods_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"
                android:textColor="@color/c_919191"
                android:textSize="17sp"
                />


            <TextView
                android:id="@+id/tv_item_order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="42dp"
                android:text="￥888.00"

                android:textColor="@color/tv_common_red"
                android:textSize="17sp"
                android:typeface="monospace"/>

            <TextView
                android:id="@+id/tv_item_order_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="11dp"
                android:text="X3"
                android:textColor="@color/c_c8c8c8"
                android:textSize="17sp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom_operation_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_order_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@mipmap/delete_order"
                android:gravity="center"
                android:text="退款"
                android:textColor="@color/c_919191"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_return_of_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@mipmap/delete_order"
                android:gravity="center"
                android:text="退货"
                android:textColor="@color/c_919191"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_cancel_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"

                android:background="@mipmap/gray_box"
                android:gravity="center"
                android:text="取消申请"
                android:textColor="@color/c_919191"
                android:textSize="17sp"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/tv_order_tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@mipmap/delete_order"
                android:gravity="center"
                android:text="订单跟踪"
                android:textColor="@color/c_919191"
                android:textSize="17sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/delete_order"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/c_919191"
                android:textSize="17sp"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/c_c8c8c8"/>
</RelativeLayout>