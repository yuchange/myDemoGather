<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27sp"></android.support.v7.widget.RecyclerView>



    <TextView
        android:id="@+id/tv_check_logistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="@mipmap/scan"
        android:gravity="center"
        android:text="查看物流"
        android:textColor="@color/c_919191"
        android:textSize="17sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/c_919191"/>

</LinearLayout>