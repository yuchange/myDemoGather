<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@mipmap/personal_bg"
    >

    <ImageView
        android:id="@+id/personal_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/personal_qr_bg"
        android:layout_marginTop="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:src="@mipmap/personal_qr"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/personal_dialog_cancel"/>
    <TextView
        android:id="@+id/personal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_qr"
        android:textColor="#919191"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:text="请扫描二维码在手机端完成"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_tv"
        android:layout_marginTop="45dp"
        android:text="人工解绑：400-800-5555"
        android:layout_centerHorizontal="true"
        android:textColor="#919191"
        android:textSize="17sp" />
</RelativeLayout>