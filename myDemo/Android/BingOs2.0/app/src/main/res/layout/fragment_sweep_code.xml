<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
            >


    <LinearLayout
        android:id="@+id/ll_sweep_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:text="欢迎来到冰果OS的世界，以下可能花您几秒钟完成操作"
            android:textColor="@color/c_919191"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btn_sweep_code_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:background="@mipmap/iv_login"
            android:gravity="center"
            android:text="扫码登录"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold"/>


    </LinearLayout>


    <Button
        android:id="@+id/btn_re_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/iv_login"
        android:gravity="center"
        android:text="登录超时，点击重新登录"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_login_state"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_919191"
        android:textSize="17sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/rl_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="83dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="请用微信扫描屏幕中的二维码完成登录"
            android:textColor="@color/c_919191"
            android:textSize="17sp"/>

    </LinearLayout>
</RelativeLayout>