<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        >


        <TextView
            android:id="@+id/tv_title_freezer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="@string/freeer"
            android:textColor="@color/c_919191"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_freezer_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_title_freezer"
            android:textColor="@color/c_919191"
            android:textSize="13sp"/>


        <TextView
            android:id="@+id/tv_title_cold_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_freezer_temperature"
            android:text="@string/cold_room"
            android:textColor="@color/c_919191"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_cold_room_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_title_cold_room"
            android:textColor="@color/c_919191"
            android:textSize="13sp"/>


        <TextClock
            android:id="@+id/tv_icebox_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:format12Hour="hh:mmaa"
            android:textColor="@color/c_919191"
            android:textSize="13sp"
            android:visibility="visible"/>


        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_toLeftOf="@+id/iv_blue_teeth"
            android:scaleType="centerCrop"
            android:src="@mipmap/wifi"/>


        <ImageView
            android:id="@+id/iv_blue_teeth"
            android:layout_width="9dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_toLeftOf="@+id/iv_sound"
            android:scaleType="centerCrop"
            android:src="@mipmap/blueteeth"/>


        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/sound"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_set"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@+id/rl_title"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/first_activity_logosize"
            android:layout_height="@dimen/first_activity_logosize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_back"/>


        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/first_activity_logosize"
            android:layout_height="@dimen/first_activity_logosize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/iv_back"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_home"

            />

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="@dimen/first_activity_logosize"
            android:layout_height="@dimen/first_activity_logosize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/iv_home"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_voice"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/c_919191"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/iv_set">

            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="@dimen/first_activity_logosize"
                android:layout_height="@dimen/first_activity_logosize"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_cart"/>

            <TextView
                android:id="@+id/tv_main_cartcount"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="25dp"
                android:background="@mipmap/reddot"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="@dimen/first_activity_logosize"
            android:layout_height="@dimen/first_activity_logosize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_set"/>


        <LinearLayout
            android:id="@+id/main_title_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/title_white"
                android:gravity="center"
                android:text="冰果优选"
                android:textColor="#9e9e9e"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/title_blue"
                android:gravity="center"
                android:text="品牌馆"
                android:textColor="#FFFFFF"
                android:textSize="17sp"/>
        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_set"
        android:background="@color/c_F4F4F4"
        >


    </FrameLayout>


</RelativeLayout>