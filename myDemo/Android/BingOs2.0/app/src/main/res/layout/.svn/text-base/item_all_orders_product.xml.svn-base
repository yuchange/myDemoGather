<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="190dp">

    <ImageView
        android:id="@+id/item_order_product_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="41dp"

        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@id/item_order_product_img">

        <TextView
            android:id="@+id/item_order_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_919191"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/item_order_product_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_order_product_name"
            android:layout_below="@id/item_order_product_name"
            android:layout_marginTop="15dp"
            android:text="规格"
            android:textColor="@color/c_919191"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/item_order_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_order_product_name"
            android:layout_marginRight="40dp"
            android:text="￥888.00"
            android:textColor="@color/tv_common_red"
            android:textSize="17sp"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/item_order_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/item_order_product_price"
            android:layout_below="@id/item_order_product_price"
            android:layout_marginTop="11dp"
            android:text="X3"
            android:textColor="@color/c_c8c8c8"
            android:textSize="17sp"
            android:typeface="monospace"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/c_c8c8c8"/>
</RelativeLayout>