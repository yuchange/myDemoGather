<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/item_index_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"

        >
        <ImageView
            android:id="@+id/item_index_recycler"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/item_index_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_index_recycler"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="张飞"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/item_index_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/item_index_nameTv"
            android:text="AAA部市场部经理"
            android:textSize="@dimen/sp_12"
            />


    </RelativeLayout>
   <TextView
       android:id="@+id/item_index_recycler_tv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="The"
       android:lines="2"
       android:ellipsize="end"
       android:textSize="15dp"
       android:textStyle="bold"
       />
    <HorizontalScrollView
        android:id="@+id/item_index_recycler_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/dp_10"
                />



        </LinearLayout>


    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_margin="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/item_item_recycler_manner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合作方式:资源互换"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/item_index_recycler_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="123"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/item_index_recycler_answer_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_index_recycler_answer"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/item_index_recycler_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="@dimen/sp_12"
            android:layout_toLeftOf="@id/item_index_recycler_answer_icon"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_index_recycler_see"
            />

    </RelativeLayout>



    </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>